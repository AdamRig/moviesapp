<!DOCTYPE html>
<html>
  <head>
    <title>Moviesapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
	
  <body>
  
	<br><br><br>
	
	<header class = "navbar navbar-fixed-top navbar-default"
		<div class = "container"
		
		<nav>
			<ul class = "nav navbar-nav navbar-left" >
				<% if !signed_in? %>
					<%= link_to "Sign In", login_path %></li>
				<% else %>
					Hi <%= @current_user.name %></li>
					<%= link_to "Sign Out", logout_path %></li>
				<%end%>
				<%= link_to "Home", root_path %>
				<%= link_to "Movie News", 'http://oscar.go.com/nominees' %>
				<%= mail_to "adam@dit.ie", "Contact Us" %>
			</ul>
		</nav>
		</div>
	</header>
					
    <%= yield %>
	
	<% flash.each do |key, value| %>
		<div class="flash <%= key %>">
			<%= value %>
		</div>
	<% end %>
  </body>
</html>
